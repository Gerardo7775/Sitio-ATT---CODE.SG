---
import BaseLayout from "./BaseLayout.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={`ATT | ${title}`}>
    <div
        class="bg-brand-cream text-att-black font-sans min-h-screen border-t-8 border-att-black"
    >
        <header
            class="p-6 border-b border-att-gray/20 flex justify-between items-center"
        >
            <a
                href="/att"
                class="font-bold text-2xl tracking-tighter hover:text-brand-red transition-colors"
                >ATT</a
            >
            <nav
                class="space-x-4 text-sm font-medium uppercase tracking-wide text-att-gray"
            >
                <a href="/att" class="hover:text-att-black">Inicio</a>
                <a href="/att/cursos" class="hover:text-att-black">Cursos</a>
                <a
                    href="/"
                    class="text-xs border border-att-gray/50 px-2 py-1 rounded hover:bg-att-black hover:text-white transition-colors"
                    >Volver al Hub</a
                >
            </nav>
        </header>

        <main class="max-w-4xl mx-auto p-6 md:p-12">
            <slot />
        </main>

        <footer
            class="p-6 text-center text-xs text-att-gray border-t border-att-gray/10 mt-12"
        >
            &copy; {new Date().getFullYear()} Academia Tecnol√≥gica de Toluca
        </footer>
    </div>
</BaseLayout>
