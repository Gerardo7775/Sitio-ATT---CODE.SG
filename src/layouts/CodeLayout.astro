---
import BaseLayout from "./BaseLayout.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={`CODE.SG | ${title}`}>
    <div
        class="bg-brand-cream text-code-dark font-display min-h-screen relative overflow-x-hidden"
    >
        <!-- Background decoration -->
        <div
            class="fixed inset-0 pointer-events-none opacity-5 z-0"
            style="background-image: radial-gradient(#2A9D8F 2px, transparent 2px); background-size: 30px 30px;"
        >
        </div>

        <header
            class="relative z-10 p-6 flex justify-between items-center bg-white border-b-4 border-black"
        >
            <a
                href="/codesg"
                class="text-3xl transform -rotate-2 hover:rotate-0 transition-transform text-code-green shadow-retro border-2 border-black px-2 bg-white"
            >
                CODE.SG
            </a>
            <nav class="space-x-4">
                <a
                    href="/"
                    class="inline-block px-4 py-1 bg-code-dark text-white text-sm border-2 border-transparent hover:border-black hover:bg-transparent hover:text-code-dark transition-all rounded-full"
                >
                    Exit to Hub
                </a>
            </nav>
        </header>

        <main class="relative z-10 max-w-6xl mx-auto p-6 md:p-12">
            <div
                class="bg-white border-4 border-black shadow-retro p-8 transform rotate-1"
            >
                <slot />
            </div>
        </main>

        <footer
            class="relative z-10 p-8 text-center bg-black text-white mt-12 font-sans"
        >
            <p>Make. Break. Repeat.</p>
        </footer>
    </div>
</BaseLayout>
