---
// src/pages/att/[...slug].astro
import { getCollection, type CollectionEntry } from "astro:content";
import ATTPostLayout from "../../layouts/ATTPostLayout.astro";

// 1. Esta función le dice a Astro qué páginas existen
export async function getStaticPaths() {
    const blogEntries = await getCollection("cursos");
    return blogEntries.map((entry: CollectionEntry<"cursos">) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

interface Props {
    entry: CollectionEntry<"cursos">;
}

// 2. Obtenemos los datos de cada archivo
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<ATTPostLayout frontmatter={entry.data}>
    <Content />
</ATTPostLayout>
